<div>
<h1>Login</h1>
</div>
<div>
<% if flash[:message] %>
 <%= flash[:message] %>
<% end %>
</div>
<div>
<%= form_for :user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  
  <%= f.submit "Login" , :class => 'btn btn-success btn-sm' %>
  
<% end %>
</div>